<div id="form" class="bg-red">
  <h2>Crea una nova actuació</h2>

  <form action="/actuacions/nova-actuacio" method="POST" enctype="multipart/form-data" class="row g-3">
    <div class="col-md-6">
      <label class="form-label"> <b>Diada</b>
        <textarea class="form-control" type="text" name="diada" rows="1" cols="70" placeholder="Nom de l'actuació">Pati del Mnactec</textarea>
      </label>
    </div>
    <div class="col-md-6">
      <label class="form-label"> <b>Adreça</b>
        <textarea class="form-control" type="text" name="address" rows="1" cols="70" placeholder="Lloc de l'actuació">Mnactec, Terrassa</textarea>
      </label>
    </div>
    <div class="col-md-6">
      <label class="form-label"> <b>Data</b>
        <input class="form-control" type="date" name="date" value="2023-12-15">
      </label>
    </div>
    <div class="col-md-6">
      <label class="form-label"> <b>Castells</b>
        <textarea class="form-control" type="text" name="castells" rows="1" cols="70" placeholder="Castells fets a l'actuació">Pde5, 3de7p, 4de7, 5de7, Pde5, Pde4, Pde4</textarea>
      </label>
    </div>
    <div class="col-md-6">
      <label class="form-label"> <b>Foto</b>
        <input class="form-control" style="background-color: white; color:#ee2229" type="file" name="actuacio-image">
      </label>
    </div>
    <div class="col-md-6">
      <label class="form-label"> <b>Altres colles</b>
        <textarea class="form-control" type="text" name="colles" rows="1" cols="70" placeholder="Colles amb les que has actuat"></textarea>
      </label>
    </div>




