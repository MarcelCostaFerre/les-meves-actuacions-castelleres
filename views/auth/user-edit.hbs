<h2>Edita l'usuari {{usuariFromDB.nom}}</h2>
<form action="/auth/{{usuariFromDB.id}}/edit" method="POST" enctype="multipart/form-data" class="row g-3">
    <div class="col-md-3">
        <label class="form-label"> <b>Nom</b>
            <textarea class="form-control" type="text" name="nom" rows="1" cols="30" placeholder="El teu nom" >{{usuariFromDB.nom}}</textarea>
      </label>     
    </div>
    <div class="col-md-3">
        <label class="form-label"> <b>Username</b>
            <input class="form-control" aria-describedby="inputGroupPrepend3" type="text" name="username" placeholder="El teu username" value="{{usuariFromDB.username}}"/>
        </label>
    </div>
    <div class="col-md-3">
        <label class="form-label"> <b>Email</b>
            <input class="form-control" type="email" name="email" placeholder="El teu email" value="{{usuariFromDB.email}}"/>
      </label>
    </div>
    <div class="col-md-3">
        <label class="form-label"> <b>Password</b>
            <input class="form-control" type="password" name="password" placeholder="El teu password" value="{{usuariFromDB.password}}"/>
      </label>
    </div>
    <div class="col-md-3">
        <label class="form-label"> <b>Foto de perfil</b>
            <input class="form-control" style="background-color: white; color:#ee2229" type="file" name="user-image">
        </label>
        {{#if imageUrl }}
            <p>Imatge actual:</p>
            <img src="{{ imageUrl }}" class="img-fluid" alt="">
            <a href="/movies/{{id}}/delete-image">Eliminar imatge</a>
        {{/if}}

        {{#unless imageUrl}}
            <p>Imatge actual:</p>
            <img src="{{usuariFromDB.userImage}}" class="img-fluid" alt="">
        {{/unless}}
    </div>
    <div class="col-12">
        <button class="btn" style="background-color: #ee2229; color:white" type="submit">Save</button>
        <button class="btn" style="background-color: #ee2229; color:white" type="reset" value="Reset">Reset</button> 
    </div>
</form>
<hr>
<a class="btn btn-sm" style="background-color: white; color:#ee2229" href='/auth/{{usuariFromDB._id}}'>Back</a>